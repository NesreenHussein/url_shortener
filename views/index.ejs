<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">URL Shortener</h1>
        <form method="POST" action="/shorten" class="mt-4">
            <div class="form-group">
                <input type="url" name="original_url" class="form-control" placeholder="Enter the URL to shorten" required>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Shorten URL</button>
        </form>
        <% if (typeof shortUrl !== 'undefined') { %>
            <div class="alert alert-success mt-4">
                Shortened URL: <a href="<%= shortUrl %>"><%= shortUrl %></a>
            </div>
        <% } %>
        <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger mt-4">
                <%= error %>
            </div>
        <% } %>
    </div>
</body>
</html>
